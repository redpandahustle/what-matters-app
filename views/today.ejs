<!DOCTYPE html>
<html>
<head>
    <title>Today</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <style>
        .container {
            display: flex;
            justify-content: space-between;
        }
        .section {
            flex: 1;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .section h2 {
            text-align: center;
        }
        .goal-entry {
            margin-bottom: 20px;
        }
        .goal-entry textarea {
            width: 95%; /* Adjust the width as needed */
            max-width: 100%; /* Ensure it doesn't overflow */
        }
        .rating {
            display: flex;
            align-items: center;
            position: relative;
        }
        .rating img {
            width: 30px;
            height: 30px;
            cursor: pointer;
            margin-right: 5px;
            border: 2px solid transparent;
            position: relative;
        }
        .rating img:hover,
        .rating img.selected {
            filter: brightness(1.2);
        }
        .rating img.selected {
            border-color: green;
        }
    </style>
</head>
<body>
    <header>
        <h1>Today</h1>
        <nav>
            <a href="/what-matters">What Matters?</a>
            <a href="/today">Today</a>
            <a href="/history">History</a>
        </nav>
    </header>
    <main>
        <form action="/today" method="POST">
            <div class="container">
                <div class="section" id="tbd">
                    <h2>TBD</h2>
                    <% goals.forEach(goal => { %>
                        <% let entry = entries[goal.category] ? entries[goal.category] : ''; %>
                        <% let rating = entries[goal.category + '_rating']; %>
                        <% if (!rating) { %>
                            <div class="goal-entry">
                                <h3><%= goal.category %></h3>
                                <p><%= goal.goal %></p>
                                <textarea name="entry" placeholder="What did you do today?"><%= entry %></textarea>
                                <input type="hidden" name="category" value="<%= goal.category %>">
                                <div class="rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <img src="/images/rating-<%= i %>.png" data-rating="<%= i %>" class="<%= entries[goal.category + '_rating'] == i ? 'selected' : '' %>">
                                    <% } %>
                                    <input type="hidden" name="rating_<%= goal.category %>" value="<%= entries[goal.category + '_rating'] %>">
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <div class="section" id="improvement">
                    <h2>Room for Improvement</h2>
                    <% goals.forEach(goal => { %>
                        <% let entry = entries[goal.category] ? entries[goal.category] : ''; %>
                        <% let rating = entries[goal.category + '_rating']; %>
                        <% if (rating >= 1 && rating <= 3) { %>
                            <div class="goal-entry">
                                <h3><%= goal.category %></h3>
                                <p><%= goal.goal %></p>
                                <textarea name="entry" placeholder="What did you do today?"><%= entry %></textarea>
                                <input type="hidden" name="category" value="<%= goal.category %>">
                                <div class="rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <img src="/images/rating-<%= i %>.png" data-rating="<%= i %>" class="<%= entries[goal.category + '_rating'] == i ? 'selected' : '' %>">
                                    <% } %>
                                    <input type="hidden" name="rating_<%= goal.category %>" value="<%= entries[goal.category + '_rating'] %>">
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <div class="section" id="crushed">
                    <h2>Crushed it!</h2>
                    <% goals.forEach(goal => { %>
                        <% let entry = entries[goal.category] ? entries[goal.category] : ''; %>
                        <% let rating = entries[goal.category + '_rating']; %>
                        <% if (rating >= 4 && rating <= 5) { %>
                            <div class="goal-entry">
                                <h3><%= goal.category %></h3>
                                <p><%= goal.goal %></p>
                                <textarea name="entry" placeholder="What did you do today?"><%= entry %></textarea>
                                <input type="hidden" name="category" value="<%= goal.category %>">
                                <div class="rating">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <img src="/images/rating-<%= i %>.png" data-rating="<%= i %>" class="<%= entries[goal.category + '_rating'] == i ? 'selected' : '' %>">
                                    <% } %>
                                    <input type="hidden" name="rating_<%= goal.category %>" value="<%= entries[goal.category + '_rating'] %>">
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
            </div>
            <button type="submit">Save</button>
        </form>
    </main>
    <script>
        document.querySelectorAll('.rating img').forEach(img => {
            img.addEventListener('click', function() {
                const parent = this.parentElement;
                parent.querySelectorAll('img').forEach(img => img.classList.remove('selected'));
                this.classList.add('selected');
                const hiddenInput = parent.querySelector('input[type="hidden"]');
                hiddenInput.value = this.dataset.rating;
            });
        });
    </script>
</body>
</html>
